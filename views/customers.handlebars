<!DOCTYPE html>
<center>	
	<table border="1" cellpadding="5" id="table">
	</table>
	
    <p>Add a new customer:</p>
    <form form class="insert" id="add-customer">
        <label for="name">Customer Name:</label><br>
        <input type="text" id="name" name="name"><br>   
        <input type="submit" value="Submit">
    </form>
	
	<form form class="update hidden" id="update-customer">
        <label for="customer">Customer to update:</label><br>
        <select id="customer" name="name">
        </select><br>
		<label for="name">New Customer Name:</label><br>
        <input type="text" id="name" name="new-name"><br> 
        <input type="submit" value="Submit">
    </form>
	
	
	<form class="remove hidden" id="delete-customer">
        <p>Remove existing customer:</p>
        <label for="name">Choose a customer to remove:</label><br>
        <select id="customer-remove" name="name">
        </select><br>
        <input type="submit" value="Submit">
	</form>
</center>
